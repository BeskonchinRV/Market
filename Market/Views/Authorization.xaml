<Window x:Class="Market.Views.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Market.Views"
        mc:Ignorable="d"
        Title="Authorization" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Логин:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding LoginCommand}" Width="160" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Пароль:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding PasswordCommand}" Width="150" Margin="5,0,0,0" VerticalContentAlignment="Center"/>
            </StackPanel>
            <Button Content="Подтвердить" Command="{Binding EntranceCommand}" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
